messages = [
    {"id": 1, "distance": 10, "opened": False},
    {"id": 2, "distance": 25, "opened": False},
    {"id": 3, "distance": 40, "opened": False},
    {"id": 4, "distance": 20, "opened": True},
]
for message in messages:
    print(message)
def check_message_unlock(user_distance, message_opened, unlock_radius=30):
    if user_distance <= unlock_radius and message_opened == False:
        return True
    else:
        return False


messages = [
    {"id": 1, "distance": 10, "opened": False},
    {"id": 2, "distance": 25, "opened": False},
    {"id": 3, "distance": 40, "opened": False},
    {"id": 4, "distance": 20, "opened": True},
]


for message in messages:
    unlocked = check_message_unlock(
        message["distance"],
        message["opened"]
    )

    if unlocked:
        print(f"ğŸ“ Message {message['id']} OPENED")
    else:
        print(f"ğŸ”’ Message {message['id']} LOCKED")
