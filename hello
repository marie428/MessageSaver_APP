user_distance = 25      # metre
message_opened = False
unlock_radius = 30




def check_message_unlock(user_distance, message_opened, unlock_radius=30):
    if user_distance <= unlock_radius and message_opened == False:                    #desicion mechanism
        return True                                                                         #unlock rule
    else:
        return False
    

result = check_message_unlock(40, False)
print(result)

result = check_message_unlock(20, False)
print(result)
